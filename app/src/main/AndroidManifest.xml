<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.defapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_foreground"
        android:label="defApp"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DefApp">
        <activity android:name="com.example.defapp.controller.DetailsActivity"></activity>
        <activity android:name="com.example.defapp.controller.HomeActivity" />
        <activity android:name="com.example.defapp.controller.LoginActivity" />
        <activity android:name="com.example.defapp.controller.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>